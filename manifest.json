{
    "manifest_version": 3,
    "name": "Browser Autocomplete",
    "version": "1.0",
    "description": "Text autocomplete for every input or textarea on any website",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "completion.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}