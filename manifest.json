{
    "manifest_version": 3,
    "name": "Browser Autocomplete",
    "version": "1.0.0",
    "description": "Text autocomplete for every input or textarea on any website",
    "permissions": [
        "storage",
        "scripting",
        "activeTab",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "http://localhost/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "remove_origin_rules",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "completion.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Browser Autocomplete"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}